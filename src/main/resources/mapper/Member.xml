<?xml version="1.0" encoding="UTF-8" ?>

<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="member">

    <select id="login" parameterType="org.iptime.kibnm821.homepage.bean.ACCOUNT_VO" resultType="Map">
        SELECT ID, PASSWORD, ADMIN, NAME FROM MEMBER WHERE ID =#{ID}
    </select>
    
    <select id="idchk" parameterType="String" resultType="int">
        SELECT COUNT(*)
        FROM MEMBER
        WHERE ID = #{ID};
    </select>

    <insert id="create" parameterType="org.iptime.kibnm821.homepage.bean.ACCOUNT_VO">
        INSERT INTO MEMBER (
                            ID,
                            PASSWORD,
                            NAME,
                            ADMIN,
                            POSTCODE,
                            ROADADDRESS,
                            MOREADDRESS,
                            PHONE1,
                            PHONE2,
                            PHONE3,
                            TIME
                            ) VALUES (
                                      #{ID},
                                      #{PASSWORD},
                                      #{NAME},
                                      #{ADMIN},
                                      #{POSTCODE},
                                      #{ROADADDRESS},
                                      #{MOREADDRESS},
                                      #{PHONE1},
                                      #{PHONE2},
                                      #{PHONE3},
                                      #{TIME}
                                      )
    </insert>
</mapper>